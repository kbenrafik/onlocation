<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#ffffff"
    tools:context="ma.onlocation.activity.CartActivity">

    <TextView android:text="Votre Commande" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/command"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"
        android:textColor="#000000"/>

    <TextView
        android:text="Nom produit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nameProduct"
        android:layout_below="@+id/command"
        android:layout_marginBottom="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Prix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/priceProduct"
        android:layout_marginBottom="20dp"
        android:layout_alignTop="@+id/nameProduct"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_alignTop="@+id/totalPrice"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:textSize="25sp"/>

    <TextView
        android:text="Prix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/totalPrice"
        android:layout_marginTop="77dp"
        android:layout_below="@+id/priceProduct"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#000000"
        android:textSize="25sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Valider La commande"
        android:id="@+id/button"
        android:background="#d34b4b"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:onClick="doSubmitCommand"
        android:layout_alignParentStart="true" />

</RelativeLayout>
