<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_height="100dp"
    android:background="#ffffFF">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/photoLocation"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:contentDescription="TODO"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="nom"
        android:id="@+id/namePlace"
        android:textColor="#000000"
        android:layout_alignTop="@+id/photoLocation"
        android:layout_toRightOf="@+id/photoLocation"
        android:layout_toEndOf="@+id/photoLocation" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="category"
        android:textSize="11dp"
        android:id="@+id/categoryPlace"
        android:layout_below="@+id/namePlace"
        android:layout_toRightOf="@+id/photoLocation"
        android:layout_toEndOf="@+id/photoLocation" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="10dp"
        android:id="@+id/comment"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="10sp"
        android:layout_marginRight="8dp"
        android:id="@+id/like"
        android:layout_alignBottom="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView" />

    <ImageView
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:id="@+id/imageView"
        android:src="@drawable/heart"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="2dp"/>

    <ImageView
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:id="@+id/imageView2"
        android:src="@drawable/comment"
        android:layout_alignBottom="@+id/like"
        android:layout_toRightOf="@+id/like"
        android:layout_toEndOf="@+id/like" />

</RelativeLayout>